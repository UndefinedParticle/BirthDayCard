<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity3">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerInside"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/happysanu" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/wishText"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="10dp"
            android:background="#F44336"
            android:gravity="center_horizontal"
            android:text="Many Many Happy Returns Of The Day To YOU..."
            android:textAlignment="center"
            android:textColor="#0871C5"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/love"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_below="@+id/wishText"
            android:background="#E6F44336"
            android:gravity="center_horizontal"
            android:text="Wishing You A very very Happy Birthday &amp; Lots Of Love "
            android:textAlignment="center"
            android:textColor="#0871C5"
            android:textSize="15sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/specialButton"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentBottom="true"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="@string/click_here_for_something_special"
            android:textColor="#F4DC06"
            android:textSize="18sp"
            android:textStyle="bold"
            android:autoLink="all"
            app:backgroundTint="#C9009688"
            />

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>